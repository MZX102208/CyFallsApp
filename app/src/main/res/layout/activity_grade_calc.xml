<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_grade_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sriramhariharan.cyfallsapp2016.GradeCalc">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Assignments"
        android:titleTextColor="#fff"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/CALCHEADER"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#727272"
        android:id="@+id/calcclass"

        android:text="Class"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#727272"
        android:id="@+id/calcgrade"
        android:text="Grade"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#727272"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/calcaveragename"
            android:text="calcAveragename"
            android:gravity="right"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#727272"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/calcaverageav"
            android:textStyle="bold"
            android:text="Average grade"

            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/buttonheader"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/add"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:id="@+id/remove"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reset"
                android:text="Reset"
                android:layout_weight="1"
                />

        </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F44336"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/removeline"
        android:layout_height="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PRESS AN ASSIGNMENT TO REMOVE"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/textView" />
    </LinearLayout>
</LinearLayout>



        <ListView
        android:layout_width="match_parent"
        android:id="@+id/calgradelist"
        android:dividerHeight="4px"
        android:layout_height="match_parent">


    </ListView>

    </LinearLayout>

</LinearLayout>
